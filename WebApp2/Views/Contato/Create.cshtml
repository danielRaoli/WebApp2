@model Contato

@{
    ViewData["Title"] = "Criar Contato";
}
<h1>Cadastrar Contato</h1>
<div>
    <form asp-action="Create" asp-controller="Contato" method="post">
  <div class="form-group">
    <label for="exampleInputEmail1">Nome</label>
    <input type="text" class="form-control" asp-for="Nome" placeholder="Preencha com seu nome">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Email</label>
    <input type="email" asp-for="Email" class="form-control" placeholder="Preencha com seu Email">
  </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Telefone</label>
            <input class="form-control" asp-for="Telefone" placeholder="Preencha com seu numero">
        </div>
        <button type="submit"  class="btn btn-primary">Adicionar</button>
  <a role="button" class="btn btn-success" asp-action="Index" asp-controller="Contato"> Voltar</a>
</form>
</div>

     